@model IEnumerable<SurveyPortal.Models.Survey>

@{
    ViewBag.Title = "Manage";
}

<h2>Manage Survey</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BackButton)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reviewable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InternalOnly)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        +
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.StartDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EndDate)
    </td>
    <td>
        @(item.BackButton == true ? "Yes" : "No")
    </td>
    <td>
        @(item.Reviewable == true ? "Yes" : "No")
    </td>
    <td>
        @(item.InternalOnly == true ? "Yes" : "No")
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Preview", "Preview", new { id = item.Id }) |
        @Html.ActionLink("Manage Questions", "ListOfQuestionBySurvey", "SurveyQuestion", new { SurveyId = item.Id }, null)
    </td>
</tr>
}

</table>
