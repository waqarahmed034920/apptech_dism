<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - APTECH Survey Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="p-3 mb-2 bg-light text-dark">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Survey Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Survey Board", "SurveyBoard", "Survey")</li>
                    <li>@Html.ActionLink("Support", "Support", "Home")</li>
                    <li>@Html.ActionLink("FAQs", "Faq", "Home")</li>
                    @{ 
                        if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    Admin
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Manage FAQs", "Index", "Faq")</li>
                                    <li>@Html.ActionLink("Manage Users", "ManagerUser", "Account")</li>
                                    <li>@Html.ActionLink("Manage Option Types", "Index", "OptionType")</li>
                                    <li>@Html.ActionLink("Manage Survey", "Manage", "Survey")</li>
                                    <li>@Html.ActionLink("Manage Competition", "Index", "Competition")</li>
                                    <li>@Html.ActionLink("Manage Support Info", "ManageSupport", "Supportinfo")</li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>*





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - APTECH Survey Portal</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/userScripts")
    @RenderSection("scripts", required: false)
</body>
</html>
