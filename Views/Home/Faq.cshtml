@model IEnumerable<SurveyPortal.Models.FAQ>

@{
    ViewBag.Title = "FAQ";
}

<h2>Frequently Asked Questions</h2>
<div id="accordion">


    @foreach (var item in Model)
    {

        <div class="card">
            <div class="card-header" id="headingThree">
                <h5 class="mb-0">
                    <button type="button"
                            data-toggle="collapse"
                            data-target="#@item.Id"
                            aria-expanded="false"
                            aria-controls="@item.Id">

                        <div class="text-danger">
                            @*<div class="col-1 text-truncate" style="margin:15px;">*@
                                @Html.DisplayFor(modelItem => item.Question)
                            @*</div>*@
                        </div>
                       
                    </button>
                </h5>
            </div>
            <div id="@item.Id" class="collapse"
                 aria-labelledby="headingThree" data-
                 parent="#accordion">
                <div class="text-info">

                    <span class="d-inline-block text-truncate" style="margin:8px;">
                        @Html.DisplayFor(modelItem => item.Answer)
                    </span>

                    

                </div>
            </div>
        </div>

        @*<div>
                <div>
                    <p>@Html.DisplayFor(modelItem => item.Question)</p>
                    <p>@Html.DisplayFor(modelItem => item.Answer)</p>
                </div>
                <div>
                    <div style="float: left;">@Html.DisplayFor(modelItem => item.UpdateBy)</div>
                    <div style="float: right;">@Html.DisplayFor(modelItem => item.UpdateOn)</div>
                </div>
            </div>*@



    }
</div>


