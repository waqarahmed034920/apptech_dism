@model SurveyPortal.Models.SurveyQuestion

@{
    ViewBag.Title = "Edit";
}

<h2>@ViewBag.Heading</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @if (ViewBag.Message != null)
    {
        <div role="alert" class="alert alert-success">
            @ViewBag.Message
        </div>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SurveyId)
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OptionTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.OptionTypeId, new SelectList(ViewBag.ListOfOptionTypes, "Id", "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.OptionTypeId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NoOfOptions, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NoOfOptions, new { htmlAttributes = new { @class = "form-control", @onblur = "addOptions('" + Model.Options + "')" } })
            @Html.ValidationMessageFor(model => model.NoOfOptions, "", new { @class = "text-danger" })
        </div>
    </div>

    <div id="appdiv">
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ListOfQuestionBySurvey", new { SurveyId = ViewBag.SurveyId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        var model = @Html.Raw(Json.Encode(Model));
        addOptions(model.Options);
    </script>
}
